@page
@model AbbyWeb.Pages.Admin.Categories.DeleteModel
@{
}

<form method="post">
    <input hidden asp-for="_Category.Id" />


    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"><i class="bi bi-plus-square"></i> Delete Category</h2>
            <hr />
        </div>
   

        <div class="mb-3">
            <label asp-for="@Model._Category.Name">Name</label>
            <input asp-for="@Model._Category.Name" disabled type="text" class="form-control"  />
            
        </div>
        <div class="mb-3">
            <label asp-for="@Model._Category.DisplayOrder">Display Order</label>
            <input asp-for="@Model._Category.DisplayOrder" disabled type="text" class="form-control" />
            
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px" >Delete</button>
        <a asp-page="Index" class="btn btn-secondary" style="width:200px">Back to List</a>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}