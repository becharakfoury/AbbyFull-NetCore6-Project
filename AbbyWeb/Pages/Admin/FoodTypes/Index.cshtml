@page
@model AbbyWeb.Pages.Admin.FoodTypes.IndexModel
@{
}
<partial name="_Notifications" />

<div class="container p-3"> 

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">FoodType List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-pencil-square"></i>&nbsp;Create Food Type
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped"  style="width:100%">
           <thead>
               <tr>
                    <td>Name</td>                    
                    <td></td>
               </tr>
           </thead> 
           <tbody>
            @foreach (var obj in Model._FoodTypes)
            {
                <tr>
                    <td>@obj.Name</td>                    
                    <td>
                        <div class="m-75 btn-group" role="group">
                            <a asp-page="Edit" class="btn btn-primary" asp-route-id="@obj.Id" ><i class="bi bi-pencil-square"></i></a>
                            <a asp-page="Delete" class="btn btn-danger mx-2" asp-route-id="@obj.Id"><i class="bi bi-trash"></i></a>
                        </div>                       
                    </td>
                </tr>

            }              

           </tbody>
    </table>


</div>